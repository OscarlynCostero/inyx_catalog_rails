			%img{src:"#{@attachment.image}"}
		- if @attachment.url && @attachment.upload=='2'
			%img{src:"#{@attachment.url}"}		
		- if @attachment.url && @attachment.upload=='3'
			%iframe.video-player.img-responsive{:allowfullscreen => "", style:"height:500px;",:frameborder => "0",:src =>"#{@attachment.url}"}
		%h1 
			=@attachment.name
		%p{aling:"justify"}
